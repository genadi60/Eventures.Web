@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container mb-3 d-flex justify-content-around">
    <div class="w-50">
        <form asp-area="Identity" asp-page="/Account/Login" method="post">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <hr class="hr-4-eventures" />
            <div class="form-group">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.Username">Username</label>
                </div>
                <input asp-for="Input.Username" class="form-control" placeholder="Username...">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.Password">Password</label>
                </div>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <hr class="hr-4-eventures" />
            <div class=" checkbox d-flex justify-content-center">
                <input asp-for="Input.RememberMe" type="checkbox" class="mt-3 mr-2">
                <label asp-for="Input.RememberMe" class="mt-2">Remember me?</label>
            </div>
            <hr class="hr-4-eventures" />
            <div class="d-flex justify-content-center mb-3 mt-4">
                <button type="submit" class="btn eventures-bg-color">Login</button>
            </div>
            <div class="d-flex justify-content-around">
                <a href="/###" class="text-center nav-link-dark">Forgot your password?</a>
            </div>
            <div class="d-flex justify-content-around">
                <a asp-area="Identity" asp-page="/Account/Register" class="text-center nav-link-dark mt-2">Register as a new user.</a>
            </div>
        </form>
        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
        {
            <div>
                <p>
                    There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                    for details on setting up this ASP.NET application to support logging in via external services.
                </p>
            </div>
        }
        else
        {
            <hr class="hr-4-eventures" />
            foreach (var provider in Model.ExternalLogins)
            {
                <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                    <div class="d-flex justify-content-center mb-3 mt-4">
                        <button type="submit" class="btn eventures-bg-color" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    </div>
                    <hr class="hr-4-eventures mt-4" />
                </form>
            }

        }
    </div>
</div>