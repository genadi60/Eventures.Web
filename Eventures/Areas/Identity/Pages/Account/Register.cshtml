@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container d-flex justify-content-around mb-3">
    <form asp-area="Identity" asp-page="/Account/Register" method="post" class="w-50">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr class="hr-4-eventures" />
        <div class="form-group d-flex justify-content-between">
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.Username">Username</label>
                </div>
                <input asp-for="Input.Username" type="text" class="form-control" placeholder="Username...">
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.Email">Email</label>
                </div>
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email...">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-between">
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.Password">Password</label>
                </div>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                </div>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password...">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-4-eventures" />
        <div class="form-group d-flex justify-content-between">
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.FirstName">First name</label>
                </div>
                <input asp-for="Input.FirstName" type="text" class="form-control" placeholder="First name...">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group width-eventures">
                <div class="d-flex justify-content-around font-weight-bold">
                    <label asp-for="Input.LastName">Last name</label>
                </div>
                <input asp-for="Input.LastName" type="text" class="form-control" placeholder="Last name...">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-around font-weight-bold">
                <label asp-for="Input.UCN">UCN</label>
            </div>
            <input asp-for="Input.UCN" type="text" class="form-control" placeholder="Universal Citizen Number...">
            <span asp-validation-for="Input.UCN" class="text-danger"></span>
        </div>
        <hr class="hr-4-eventures" />
        <div class="d-flex justify-content-around">
            <button asp-area="Identity" asp-page="/Account/Register" type="submit" class="btn eventures-bg-color">Register</button>
        </div>
    </form>
</div>