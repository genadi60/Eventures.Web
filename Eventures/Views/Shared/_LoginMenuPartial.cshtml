@using Microsoft.AspNetCore.Identity
@inject SignInManager<EventuresUser> SignInManager
@inject UserManager<EventuresUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity"asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="d-flex justify-content-between">
        <ul class="navbar-collapse collapse nav navbar-nav">
            <li>
                @if (User.IsInRole("Admin"))
                {
                    <span>Hello Admin!</span>
                }
                else
                {
                    <span>Hello @User.Identity.Name!</span>
                }
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Logout" class="nav-link">Logout</a>
            </li>
        </ul>
    </form>
}else
{
    <form asp-area="Identity" asp-page="/Account/Login" method="get" class="d-flex justify-content-between">
        <ul class="navbar-collapse collapse nav navbar-nav ">
            <li>
                <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
            </li>
        </ul>
    </form>
}