@using Microsoft.AspNetCore.Identity
@inject SignInManager<EventuresUser> SignInManager
@inject UserManager<EventuresUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Accounts" asp-action="Logout" method="post" class="d-flex justify-content-between">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a asp-controller="Users" asp-action="Index" class="font-weight-bold nav-link">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Accounts" asp-action="Logout" id="@UserManager.GetUserId(User)" class="font-weight-bold nav-link">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <form asp-controller="Accounts" asp-action="Login" method="post" class="d-flex justify-content-between">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a asp-controller="Accounts" asp-action="Login" class="nav-link">Login</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Accounts" asp-action="Register" class="nav-link">Register</a>
            </li>
        </ul>
    </form>
}