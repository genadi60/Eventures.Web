@model Eventures.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}
<div class="container d-flex justify-content-around mb-3">
    <form asp-controller="Accounts" asp-action="Login" class="w-50" method="post">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <hr class="hr-4-eventures" />
        <div class="form-group">
            <div class="d-flex justify-content-around font-weight-bold">
                <label asp-for="Username">Username</label>
            </div>
            <input asp-for="Username" class="form-control" placeholder="Username...">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-around font-weight-bold">
                <label asp-for="Password">Password</label>
            </div>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <hr class="hr-4-eventures" />
        <div class=" checkbox d-flex justify-content-center">
            <input asp-for="RememberMe" type="checkbox" class="mt-3 mr-2">
            <label asp-for="RememberMe" class="mt-2">Remember me?</label>
        </div>
        <hr class="hr-4-eventures" />
        <div class="d-flex justify-content-center mb-3 mt-4">
            <button type="submit" class="btn eventures-bg-color">Login</button>
        </div>
        <div class="d-flex justify-content-around">
            <a href="/###" class="text-center nav-link-dark">Forgot your password?</a>
        </div>
        <div class="d-flex justify-content-around">
            <a asp-controller="Accounts" asp-action="Register" class="text-center nav-link-dark mt-2">Register as a new user.</a>
        </div>
    </form>
</div>